<%= render 'shared/second-header' %>

<%= form_with model: @builder, url: builder_registration_path, class: 'builder-registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      製作者情報入力
    </h1>
  </div>

  <%# render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ブランド名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :brand_name, class:"input-default", id:"brandname", placeholder:"例) 大阪Guitar(株)", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :builder_email, class:"input-default", id:"builder-email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :builder_password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">地域</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-area-wrap'>
      <%= f.text_area :area, class:"input-area", id:"area", placeholder:"例) 大阪府" %>
      <%= f.text_area :city, class:"input-city", id:"city", placeholder:"例) 大阪市" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class='form-text'>ブランド紹介</label>
      <span class='indispensable'>必須</span>
    </div>
    <%= f.text_area :introduce, class:"input-introduce", id:"introduction", placeholder:"ここに紹介文を入力してください" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class='form-text'>価格帯</label>
      <span class='indispensable'>必須</span>
    </div>
    <%= f.text_area :price_zone, class:"input-price", id:"price-zone", placeholder:"例) 約１０万円〜３０万円" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class='form-text'>電話番号</label>
      <span class='indispensable'>必須</span>
    </div>
    <%= f.text_field :phone, class:"input-phone", id:"phone", placeholder:"例) 06xxxxxxxx" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class='form-text'>オーダーメイドの可否を入力ください</label>
      <span class='indispensable'>必須</span>
    </div>
    <%= f.collection_select(:private_order_id, PrivateOrder.all, :id, :name, {}, {class:"select-box", id:"private-order"}) %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      「会員登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
  <p class='register-info'>本人情報の登録について</p>
</div>
<% end %>


